<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nazarick.note.mapper.UserMapper">
    <resultMap id="User" type="User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="menuTree" column="menu_tree"/>
        <result property="lastViewNoteId" column="last_view_note_id"/>
    </resultMap>

    <sql id="selectUser">
        select * from user
    </sql>

    <select id="findById" parameterType="Integer" resultMap="User">
        <include refid="selectUser"/> where id = #{id}
    </select>

    <select id="findByUsername" resultMap="User">
        <include refid="selectUser"/> where username = #{username}
    </select>

    <insert id="insert" parameterType="User">
        insert into user (id, username, password, menu_tree, last_view_note_id)
        values (#{id}, #{username}, #{password}, #{menuTree}, #{lastViewNoteId})
    </insert>

    <update id="update" parameterType="User">
        update
            user
        <set>
            <if test="username != null and username != ''">username = #{username},</if>
            <if test="password != null and password != ''">password = #{password},</if>
            <if test="menuTree != null and menuTree != ''">menu_tree = #{menuTree},</if>
            <if test="lastViewNoteId != null and lastViewNoteId != ''">last_view_note_id = #{lastViewNoteId},</if>
        </set>
        where
            id = #{id}
    </update>

    <delete id="deleteById" parameterType="Integer">
        delete from user
        where id = #{id}
    </delete>
</mapper>